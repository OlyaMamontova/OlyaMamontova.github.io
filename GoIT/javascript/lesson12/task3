/*Функция-задержка
Напишите функцию delay(f, ms), которая возвращает обёртку вокруг f, задерживающую вызов на ms миллисекунд.
*/

function delay(func, time){
	return function(){
		var args = arguments;
		var ctx = this;
		setTimeout(function(){
			func.apply(this, args);
		}, time);
	};
}

function f(x){
	console.log('Hello: ' + x);
}

var f1000 = delay(f, 1000);
var f1500 = delay(f, 1500);

f1000('тест1');
f1500('тест2');